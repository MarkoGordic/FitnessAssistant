<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/backButton"

            android:layout_width="64dp"
            android:layout_height="64dp"

            android:background="@color/backgroundColor"
            android:contentDescription="@null"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"

            android:src="@drawable/back"
            app:tint="@color/SpaceCadet"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@id/backButton"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/forwardButton"
            android:layout_toEndOf="@id/backButton"

            android:fontFamily="@font/ralewaym"
            android:includeFontPadding="false"
            android:paddingStart="14dp"
            android:paddingTop="29dp"
            android:paddingEnd="14dp"
            android:text="@string/product_details"
            android:textColor="@color/SpaceCadet"
            android:textFontWeight="600"
            android:textSize="21sp" />

        <ImageButton
            android:id="@+id/forwardButton"

            android:layout_width="64dp"
            android:layout_height="64dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:background="@color/backgroundColor"
            android:contentDescription="@null"

            android:paddingStart="4dp"
            android:paddingTop="28dp"
            android:paddingEnd="28dp"
            android:paddingBottom="4dp"

            android:src="@drawable/check"
            android:scaleX="0.75"
            android:scaleY="0.75"
            app:tint="@color/SpaceCadet"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

    <TextView
        android:id="@+id/productName"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:ellipsize="end"
        android:maxLines="1"

        android:layout_marginTop="8dp"

        android:gravity="center_vertical"

        android:fontFamily="@font/ralewaym"
        android:includeFontPadding="false"
        android:padding="20dp"
        android:textColor="@color/InvertedBackgroundColor"
        android:textFontWeight="900"
        android:textSize="23sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/LightGrayColor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/ralewaym"

            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:padding="20dp"
            android:text="@string/amount"
            android:textColor="@color/InvertedBackgroundColor"
            android:textFontWeight="600"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/changeAmount"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:orientation="horizontal"
            android:padding="20dp"
            tools:ignore="RelativeOverlap">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="2dp"
                android:fontFamily="@font/roboto_light"

                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:textColor="@color/SpaceCadet"
                android:textFontWeight="600"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/grams"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="1dp"
                android:fontFamily="@font/ralewaym"

                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/g"
                android:textColor="@color/SpaceCadet"
                android:textFontWeight="600"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/LightGrayColor"/>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/ralewaym"

            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:padding="20dp"
            android:text="@string/meal"
            android:textColor="@color/InvertedBackgroundColor"
            android:textFontWeight="600"
            android:textSize="17sp" />


        <LinearLayout
            android:id="@+id/changeMeal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:orientation="horizontal"
            android:padding="20dp"
            tools:ignore="RelativeOverlap">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="2dp"
                android:fontFamily="@font/ralewaym"

                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/meal"
                android:textColor="@color/SpaceCadet"
                android:textFontWeight="600"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/mealNumber"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="1dp"
                android:fontFamily="@font/roboto_light"

                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:textColor="@color/SpaceCadet"
                android:textFontWeight="600"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/LightGrayColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"

        android:orientation="horizontal"
        android:gravity="center_vertical"

        android:baselineAligned="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">

            <com.example.fitnessassistant.util.PieView
                android:id="@+id/productPie"

                android:layout_width="match_parent"
                android:layout_height="0dp"

                app:layout_constraintDimensionRatio="H, 1:1"
                app:layout_constraintTop_toTopOf="parent"

                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:id="@+id/caloriesLay"

                android:layout_width="match_parent"
                android:layout_height="0dp"

                app:layout_constraintDimensionRatio="H, 1:1"
                app:layout_constraintTop_toTopOf="parent"

                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/caloriesAmount"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:textColor="@color/InvertedBackgroundColor"
                    android:textFontWeight="600"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/ralewaym"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="@string/cal_big"
                    android:textColor="@color/InvertedBackgroundColor"
                    android:textFontWeight="600"
                    android:textSize="13sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/carbsPercent"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_light"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:padding="1dp"
                android:textColor="@color/Green"
                android:textFontWeight="600"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/carbsAmount"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_light"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:padding="2dp"
                android:textColor="@color/InvertedBackgroundColor"
                android:textFontWeight="600"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/ralewaym"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="@string/carbs"
                android:padding="1dp"
                android:textColor="@color/InvertedBackgroundColor"
                android:textFontWeight="600"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fatPercent"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_light"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:padding="1dp"
                android:textColor="@color/Yellow"
                android:textFontWeight="600"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/fatAmount"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_light"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:padding="2dp"
                android:textColor="@color/InvertedBackgroundColor"
                android:textFontWeight="600"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/ralewaym"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="@string/fat"
                android:padding="1dp"
                android:textColor="@color/InvertedBackgroundColor"
                android:textFontWeight="600"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/proteinPercent"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_light"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:padding="1dp"
                android:textColor="@color/Red"
                android:textFontWeight="600"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/proteinAmount"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_light"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:padding="2dp"
                android:textColor="@color/InvertedBackgroundColor"
                android:textFontWeight="600"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/ralewaym"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="@string/protein"
                android:padding="1dp"
                android:textColor="@color/InvertedBackgroundColor"
                android:textFontWeight="600"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/LightGrayColor"/>
    
</LinearLayout>