<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:paddingTop="8dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="16dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_drawable"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"

        android:src="@drawable/fork_and_knife"
        app:tint="@color/InvertedBackgroundColor"
        android:padding="4dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/date"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"

        android:fontFamily="@font/roboto_light"
        android:includeFontPadding="false"
        android:padding="20dp"
        android:textColor="@color/InvertedBackgroundColor"
        android:textFontWeight="600"
        android:textSize="22sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/energyUnit"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"

            android:gravity="start"

            android:fontFamily="@font/ralewaym"
            android:includeFontPadding="false"
            android:text="@string/calories"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="1dp"
            android:textColor="@color/InvertedBackgroundColor"
            android:textFontWeight="600"
            android:textSize="15sp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="7dp">
            <ProgressBar
                android:id="@+id/caloriesProgress"

                style="?android:attr/progressBarStyleHorizontal"

                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_gravity="center"

                android:indeterminate="false"
                android:progressBackgroundTint="@color/LightGrayColor"
                android:progressTint="@color/SpaceCadet" />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/caloriesPercent"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"

                android:gravity="start"

                android:fontFamily="@font/roboto_light"
                android:includeFontPadding="false"
                android:textColor="@color/SpaceCadet"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/caloriesGoal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"

                android:fontFamily="@font/roboto_light"

                android:gravity="end"
                android:includeFontPadding="false"
                android:textColor="@color/LightGrayColor"
                android:textFontWeight="600"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="start"

            android:fontFamily="@font/ralewaym"
            android:includeFontPadding="false"
            android:text="@string/carbs"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="1dp"
            android:textColor="@color/InvertedBackgroundColor"
            android:textFontWeight="600"
            android:textSize="15sp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="7dp">
            <ProgressBar
                android:id="@+id/carbsProgress"

                style="?android:attr/progressBarStyleHorizontal"

                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_gravity="center"

                android:indeterminate="false"
                android:progressBackgroundTint="@color/LightGrayColor"
                android:progressTint="@color/Green" />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/carbsPercent"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"

                android:gravity="start"

                android:fontFamily="@font/roboto_light"
                android:includeFontPadding="false"
                android:textColor="@color/Green"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/carbsGoal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"

                android:fontFamily="@font/roboto_light"

                android:gravity="end"
                android:includeFontPadding="false"
                android:textColor="@color/LightGrayColor"
                android:textFontWeight="600"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"

            android:gravity="start"

            android:fontFamily="@font/ralewaym"
            android:includeFontPadding="false"
            android:text="@string/fat"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="1dp"
            android:textColor="@color/InvertedBackgroundColor"
            android:textFontWeight="600"
            android:textSize="15sp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="7dp">
            <ProgressBar
                android:id="@+id/fatProgress"

                style="?android:attr/progressBarStyleHorizontal"

                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_gravity="center"

                android:indeterminate="false"
                android:progressBackgroundTint="@color/LightGrayColor"
                android:progressTint="@color/Yellow" />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/fatPercent"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"

                android:gravity="start"

                android:fontFamily="@font/roboto_light"
                android:includeFontPadding="false"
                android:textColor="@color/Yellow"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fatGoal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"

                android:fontFamily="@font/roboto_light"

                android:gravity="end"
                android:includeFontPadding="false"
                android:textColor="@color/LightGrayColor"
                android:textFontWeight="600"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"

            android:gravity="start"

            android:fontFamily="@font/ralewaym"
            android:includeFontPadding="false"
            android:text="@string/protein"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="1dp"
            android:textColor="@color/InvertedBackgroundColor"
            android:textFontWeight="600"
            android:textSize="15sp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="7dp">
            <ProgressBar
                android:id="@+id/proteinProgress"

                style="?android:attr/progressBarStyleHorizontal"

                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_gravity="center"

                android:indeterminate="false"
                android:progressBackgroundTint="@color/LightGrayColor"
                android:progressTint="@color/Red" />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/proteinPercent"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"

                android:gravity="start"

                android:fontFamily="@font/roboto_light"
                android:includeFontPadding="false"
                android:textColor="@color/Red"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/proteinGoal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"

                android:fontFamily="@font/roboto_light"

                android:gravity="end"
                android:includeFontPadding="false"
                android:textColor="@color/LightGrayColor"
                android:textFontWeight="600"
                android:textSize="12sp" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_ok_button"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/authentication_button"
            android:layout_gravity="center"

            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/ok"
            android:includeFontPadding="false"
            android:textColor="@color/backgroundColor"
            android:textFontWeight="600"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>