<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:id="@+id/stepCountingLinear"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="64dp"

        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- StepCount TextView -->
        <TextView
            android:id="@+id/stepCountTextView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="12dp"

            android:fontFamily="@font/ralewaym"
            android:text="@string/zero"
            android:textAlignment="viewEnd"
            android:textColor="@color/BlueYonder"
            android:textFontWeight="600"
            android:textSize="28sp" />

        <!-- Step Goal TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/ralewaym"
            android:text="@string/slash"
            android:textColor="@color/BlueYonder"
            android:textFontWeight="600"
            android:textSize="28sp" />

        <!-- Step Goal TextView -->
        <TextView
            android:id="@+id/stepGoalTextView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="32dp"

            android:fontFamily="@font/ralewaym"
            android:text="@string/default_step_target"
            android:textColor="@color/BlueYonder"
            android:textFontWeight="600"
            android:textSize="28sp" />

        <!-- StepCounting Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/stepCountingButton"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/authentication_button"

            android:fontFamily="@font/ralewayb"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="@string/stop_counting"
            android:textAllCaps="false"
            android:textColor="@color/backgroundColor"
            android:textFontWeight="600"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stepGoalPicker"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="35dp"

        android:background="@drawable/setup_field"

        app:layout_constraintTop_toBottomOf="@id/stepCountingLinear"

        android:orientation="horizontal">
            <TextView
                android:id="@+id/selectLanguageTextView"

                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"

                app:layout_constraintTop_toBottomOf="@id/stepCountingLinear"

                android:gravity="center_vertical"
                app:drawableStartCompat="@drawable/target"
                android:drawablePadding="12dp"

                android:text="@string/step_goal"
                android:textColor="@color/SpaceCadet"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:drawableTint="@color/SpaceCadet" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"

            android:background="@color/SpaceCadet"/>

        <EditText
            android:id="@+id/edtStepGoal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:fontFamily="@font/ralewaym"
            android:importantForAutofill="no"

            android:includeFontPadding="false"
            android:inputType="number"
            android:maxLength="5"
            android:textAlignment="center"

            android:textColor="@color/SpaceCadet"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck, LabelFor,DuplicateSpeakableTextCheck,SpeakableTextPresentCheck" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"

            android:background="@color/SpaceCadet"/>

        <ImageView
            android:id="@+id/changeStepGoal"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:src="@drawable/pencil"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:tint="@color/SpaceCadet"
            android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mapSwipeUp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginBottom="72dp"

        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:layout_marginBottom="-10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"

            android:background="@color/backgroundColor"

            android:src="@drawable/up"
            app:tint="@color/SpaceCadet"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/transparent_button"

            android:elevation="-1dp"

            android:fontFamily="@font/ralewayb"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="@string/map_view"
            android:textAllCaps="false"
            android:textColor="@color/SpaceCadet"
            android:textFontWeight="600"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>