<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/settings_field"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <!-- Dialog Drawable -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_drawable"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"

        android:layout_gravity="center"
        android:src="@drawable/info"
        app:tint="@color/SpaceCadet"/>

    <!-- Dialog Header -->
    <TextView
        android:id="@+id/dialog_header"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"

        android:fontFamily="@font/ralewaym"
        android:includeFontPadding="false"
        android:textSize="22sp"
        android:text="@string/nutrition_recommendations"
        android:textColor="@color/SpaceCadet"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:fontFamily="@font/ralewaym"
            android:includeFontPadding="false"
            android:text="@string/calorie_message"
            android:textSize="15sp"
            android:textColor="@color/InvertedBackgroundColor"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"

                android:fontFamily="@font/ralewaym"
                android:gravity="end"
                android:includeFontPadding="false"

                android:paddingStart="0dp"
                android:paddingEnd="5dp"
                android:text="@string/protein_colon"
                android:textColor="@color/Red"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"

                android:gravity="start"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"

                android:fontFamily="@font/roboto_light"
                android:textFontWeight="800"
                android:includeFontPadding="false"
                android:text="@string/around_1g_per_pound"
                android:textSize="14sp"
                android:textColor="@color/InvertedBackgroundColor"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"

                android:fontFamily="@font/ralewaym"
                android:gravity="end"
                android:includeFontPadding="false"

                android:paddingStart="0dp"
                android:paddingEnd="5dp"
                android:text="@string/fat_colon"
                android:textColor="@color/Yellow"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"

                android:gravity="start"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"

                android:fontFamily="@font/roboto_light"
                android:textFontWeight="800"
                android:includeFontPadding="false"
                android:text="@string/not_less_than_25_per_cent"
                android:textSize="14sp"
                android:textColor="@color/InvertedBackgroundColor"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"

                android:fontFamily="@font/ralewaym"
                android:gravity="end"
                android:includeFontPadding="false"

                android:paddingStart="0dp"
                android:paddingEnd="5dp"
                android:text="@string/carbs_colon"
                android:textColor="@color/Green"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"

                android:gravity="start"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"

                android:fontFamily="@font/roboto_light"
                android:textFontWeight="800"
                android:includeFontPadding="false"
                android:text="@string/fill_out_the_rest"
                android:textSize="14sp"
                android:textColor="@color/InvertedBackgroundColor"/>
        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"

            android:gravity="start"

            android:fontFamily="@font/ralewaym"
            android:includeFontPadding="false"
            android:text="@string/based_on_your_weight"
            android:textSize="15sp"
            android:textColor="@color/InvertedBackgroundColor"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"

                android:gravity="end"
                android:paddingStart="0dp"
                android:paddingEnd="5dp"

                android:fontFamily="@font/ralewaym"
                android:includeFontPadding="false"
                android:text="@string/calories_colon"
                android:textSize="15sp"
                android:textColor="@color/SpaceCadet"/>
            <TextView
                android:id="@+id/caloriesAmount"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"

                android:gravity="start"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"

                android:fontFamily="@font/roboto_light"
                android:textFontWeight="800"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/InvertedBackgroundColor"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"

                android:fontFamily="@font/ralewaym"
                android:gravity="end"
                android:includeFontPadding="false"

                android:paddingStart="0dp"
                android:paddingEnd="5dp"
                android:text="@string/protein_colon"
                android:textColor="@color/Red"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck" />
            <TextView
                android:id="@+id/proteinAmount"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"

                android:gravity="start"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"

                android:fontFamily="@font/roboto_light"
                android:textFontWeight="800"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/InvertedBackgroundColor"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"

                android:fontFamily="@font/ralewaym"
                android:gravity="end"
                android:includeFontPadding="false"

                android:paddingStart="0dp"
                android:paddingEnd="5dp"
                android:text="@string/fat_colon"
                android:textColor="@color/Yellow"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck" />
            <TextView
                android:id="@+id/fatAmount"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"

                android:gravity="start"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"

                android:fontFamily="@font/roboto_light"
                android:textFontWeight="800"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/InvertedBackgroundColor"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"

                android:fontFamily="@font/ralewaym"
                android:gravity="end"
                android:includeFontPadding="false"

                android:paddingStart="0dp"
                android:paddingEnd="5dp"
                android:text="@string/carbs_colon"
                android:textColor="@color/Green"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck" />
            <TextView
                android:id="@+id/carbAmount"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"

                android:gravity="start"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"

                android:fontFamily="@font/roboto_light"
                android:textFontWeight="800"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/InvertedBackgroundColor"/>
        </TableRow>
    </LinearLayout>

    <!-- Dialog OK Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_ok_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:layout_marginTop="20dp"

        android:background="@drawable/authentication_button"

        android:fontFamily="@font/ralewayb"
        android:includeFontPadding="false"
        android:text="@string/ok"
        android:textColor="@color/backgroundColor"
        android:textSize="16sp" />
</LinearLayout>