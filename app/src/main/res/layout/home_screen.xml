<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor">

    <!-- Navigation at the bottom of the screen -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"

        android:background="@color/BackgroundColor"

        app:itemIconTint="@color/bottom_navigation_colors"
        app:itemTextColor="@color/bottom_navigation_colors"

        app:menu="@menu/bottom_navigation" />

    <!-- Welcoming the user message -->
    <TextView
        android:id="@+id/welcomeMessage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"

        android:text="@string/welcome_text"
        android:fontFamily="@font/ralewaym"
        android:textSize="24sp"
        android:textColor="@color/BlueYonder" />

    <!-- TextView displaying the step goal -->
    <TextView
        android:id="@+id/stepTarget"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"

        android:text="@string/default_step_target"
        android:fontFamily="@font/ralewayb"
        android:textColor="@color/BlueYonder"
        android:textSize="25sp" />

    <!-- TextView displaying the step count -->
    <TextView
        android:id="@+id/stepCount"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toStartOf="@id/stepTarget"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"

        android:text="@string/default_step_count"
        android:fontFamily="@font/ralewayb"
        android:textColor="@color/BlueYonder"
        android:textSize="25sp" />

    <!-- UserName TextView -->
    <TextView
        android:id="@+id/userName"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stepCount"

        android:layout_marginTop="48dp"

        android:fontFamily="@font/ralewaym"
        android:includeFontPadding="false"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:text="@string/user_name"
        android:textColor="@color/Flame"
        android:textFontWeight="600"
        android:textSize="17sp"/>

    <!-- UserEmail TextView -->
    <TextView
        android:id="@+id/userEmail"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName"

        android:layout_marginTop="16dp"

        android:fontFamily="@font/ralewaym"
        android:includeFontPadding="false"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:text="@string/user_email"
        android:textColor="@color/Flame"
        android:textFontWeight="600"
        android:textSize="17sp"/>

    <!-- Sign Out Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signOutHPButton"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="200dp"

        android:background="@drawable/authentication_button"

        android:fontFamily="@font/ralewayb"
        android:includeFontPadding="false"
        android:text="@string/sign_out"
        android:textColor="@color/BackgroundColor"
        android:textFontWeight="600" />

</androidx.constraintlayout.widget.ConstraintLayout>