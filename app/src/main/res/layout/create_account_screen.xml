<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createAccountScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backToSignInButton"

        android:layout_width="64dp"
        android:layout_height="64dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:paddingStart="20dp"
        android:paddingEnd="4dp"
        android:paddingTop="20dp"
        android:paddingBottom="4dp"

        android:src="@drawable/back"
        android:background="@color/BackgroundColor"
        android:contentDescription="@string/back_button_description"/>

    <!-- Main textView -->
    <TextView
        android:id="@+id/createAccountTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/usernameEditForRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginBottom="48dp"

        android:fontFamily="@font/ralewayb"
        android:includeFontPadding="false"
        android:text="@string/create_account"
        android:textAlignment="center"
        android:textColor="@color/SpaceCadet"
        android:textFontWeight="600"
        android:textSize="30sp"/>

    <!-- Large textView-->
    <TextView
        android:id="@+id/largeRegisterTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAccountTextView"
        app:layout_constraintBottom_toTopOf="@id/usernameEditForRegister"


        android:fontFamily="@font/ralewaym"
        android:includeFontPadding="false"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:text="@string/register_for_free"
        android:textAlignment="center"
        android:textColor="@color/Flame"
        android:textFontWeight="600"
        android:textSize="17sp"/>

    <!-- Small textView -->
    <TextView
        android:id="@+id/smallRegisterTextView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordEditForRegister"

        android:layout_marginTop="12dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="58dp"

        android:fontFamily="@font/raleway"
        android:includeFontPadding="false"
        android:text="@string/register_agreement"
        android:textAlignment="textStart"
        android:textColor="@color/Flame"
        android:textFontWeight="600"
        android:textSize="14sp"/>

    <!-- Username EditText-->
    <EditText
        android:id="@+id/usernameEditForRegister"

        android:layout_width="match_parent"
        android:layout_height="48dp"

        app:layout_constraintBottom_toTopOf="@id/emailEditForRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"

        android:autofillHints="username"
        android:hint="@string/username"
        android:inputType="textPersonName"

        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/custom_user"

        android:includeFontPadding="false"
        android:fontFamily="@font/ralewaym"
        android:paddingHorizontal="16sp"
        android:textColor="@color/SpaceCadet"
        android:textColorHint="@color/BlueYonder"
        android:textSize="20sp"/>

    <!-- Email EditText -->
    <EditText
        android:id="@+id/emailEditForRegister"

        android:layout_width="match_parent"
        android:layout_height="48dp"

        app:layout_constraintBottom_toTopOf="@id/passwordEditForRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"

        android:autofillHints="emailAddress"
        android:hint="@string/email"
        android:inputType="textEmailAddress"

        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/custom_email"

        android:includeFontPadding="false"
        android:fontFamily="@font/ralewaym"
        android:paddingHorizontal="16sp"
        android:textColor="@color/SpaceCadet"
        android:textColorHint="@color/BlueYonder"
        android:textSize="20sp"/>

    <!-- Password EditText -->
    <EditText
        android:id="@+id/passwordEditForRegister"

        android:layout_width="match_parent"
        android:layout_height="48dp"

        app:layout_constraintBottom_toTopOf="@id/confirmPasswordEditForRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"

        android:autofillHints="password"
        android:hint="@string/password"
        android:inputType="textPassword"

        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/custom_lock"

        android:includeFontPadding="false"
        android:fontFamily="@font/ralewaym"
        android:paddingHorizontal="16sp"
        android:textColor="@color/SpaceCadet"
        android:textColorHint="@color/BlueYonder"
        android:textSize="20sp"/>

    <!-- Confirm Password EditText -->
    <EditText
        android:id="@+id/confirmPasswordEditForRegister"

        android:layout_width="match_parent"
        android:layout_height="48dp"

        app:layout_constraintBottom_toTopOf="@id/registerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="56dp"

        android:autofillHints="password"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"

        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/custom_lock"

        android:includeFontPadding="false"
        android:fontFamily="@font/ralewaym"
        android:paddingHorizontal="16sp"
        android:textColor="@color/SpaceCadet"
        android:textColorHint="@color/BlueYonder"
        android:textSize="20sp"/>

    <!-- Register Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButton"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="200dp"

        android:background="@drawable/authentication_button"

        android:fontFamily="@font/ralewayb"
        android:includeFontPadding="false"
        android:text="@string/register"
        android:textColor="@color/BackgroundColor"
        android:textFontWeight="600" />

    <!-- Registering Progress Circle -->
    <ProgressBar
        android:id="@+id/registerBar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@id/registerButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/registerButton"

        android:elevation="2dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/BlueYonder"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/registerCheckbox"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/smallRegisterTextView"
        app:layout_constraintBottom_toBottomOf="@id/smallRegisterTextView"

        android:buttonTint="@color/MangoTango"
        android:layout_marginEnd="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>