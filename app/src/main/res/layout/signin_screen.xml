<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/BackgroundColor"
    tools:ignore="NamespaceTypo">

    <!-- Welcome TextView -->
    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@id/edtTxtEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginBottom="80dp"

        android:fontFamily="@font/ralewayb"
        android:includeFontPadding="false"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textColor="@color/SpaceCadet"
        android:textFontWeight="600"
        android:textSize="30sp" />

    <!-- TODO Add Â© rights for icons && for fonts -->
    <!-- TODO Add vision option for password -->

    <!-- Email EditText -->
    <EditText
        android:id="@+id/edtTxtEmail"

        android:layout_width="match_parent"
        android:layout_height="48dp"

        app:layout_constraintBottom_toTopOf="@id/edtTxtPassword"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"

        android:autofillHints="emailAddress"

        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/custom_email"
        android:fontFamily="@font/ralewaym"

        android:hint="@string/prompt_email"

        android:includeFontPadding="false"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="16sp"
        android:textColor="@color/SpaceCadet"
        android:textColorHint="@color/BlueYonder"
        android:textSize="20sp" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/edtTxtPassword"

        android:layout_width="match_parent"
        android:layout_height="48dp"

        app:layout_constraintBottom_toTopOf="@id/signInButton"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"

        android:autofillHints="password"

        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/custom_lock"
        android:fontFamily="@font/ralewaym"

        android:hint="@string/prompt_password"

        android:includeFontPadding="false"
        android:inputType="textPassword"
        android:paddingHorizontal="16sp"
        android:textColor="@color/SpaceCadet"
        android:textColorHint="@color/BlueYonder"
        android:textSize="20sp" />

    <!-- Sign Up Button-->
    <!-- TODO The marginBottom should be changed, after adding Google log in/Forgot password/Create acc -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signInButton"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="256dp"

        android:background="@drawable/sign_in_button"

        android:fontFamily="@font/ralewayb"
        android:includeFontPadding="false"
        android:text="@string/action_sign_in_short"
        android:textColor="@color/BackgroundColor"
        android:textFontWeight="600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/edtTxtPassword"
        app:layout_constraintStart_toStartOf="@id/edtTxtPassword" />

    <!-- Signing in Progress Circle -->
    <ProgressBar
        android:id="@+id/signInProgressBar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@id/signInButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/signInButton"

        android:elevation="2dp"
        android:indeterminate="true"

        android:indeterminateTint="@color/BlueYonder"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>