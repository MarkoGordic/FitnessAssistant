<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/BackgroundColor"
    tools:ignore="NamespaceTypo">

    <!-- Welcome TextView -->
    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/edtTxtEmail"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="64dp"

        android:fontFamily="@font/ralewayb"
        android:includeFontPadding="false"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textColor="@color/BlueYonder"
        android:textFontWeight="600"
        android:textSize="30sp" />

    <!-- TODO Add Â© rights for icons && for fonts -->
    <!-- TODO EditTexts should change color when they are selected -->
    <!-- TODO Add vision for password -->

    <!-- Email EditText -->
    <EditText
        android:id="@+id/edtTxtEmail"

        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_above="@id/edtTxtPassword"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"

        android:autofillHints="emailAddress"

        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/custom_email"
        android:fontFamily="@font/ralewaym"

        android:hint="@string/prompt_email"

        android:includeFontPadding="false"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="16sp"
        android:textColor="@color/BlueYonder"
        android:textColorHint="@color/MaximumBluePurple"
        android:textSize="20sp" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/edtTxtPassword"

        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_above="@id/signInButton"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"

        android:autofillHints="password"

        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/custom_lock"
        android:fontFamily="@font/ralewaym"

        android:hint="@string/prompt_password"

        android:includeFontPadding="false"
        android:inputType="textPassword"
        android:paddingHorizontal="16sp"
        android:textColor="@color/BlueYonder"
        android:textColorHint="@color/MaximumBluePurple"
        android:textSize="20sp" />

    <!-- Sign Up Button-->
    <!-- TODO The marginBottom should be changed, after adding Google log in -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signInButton"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignStart="@id/edtTxtPassword"
        android:layout_alignEnd="@id/edtTxtPassword"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="256dp"

        android:background="@drawable/sign_in_button"

        android:fontFamily="@font/ralewayb"
        android:includeFontPadding="false"
        android:text="@string/action_sign_in_short"
        android:textColor="@color/MaximumBluePurple"
        android:textFontWeight="600" />

    <!-- Loading Progress Circle -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/signInProgress"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/signInButton"

        android:layout_alignBottom="@id/signInButton"
        android:layout_centerHorizontal="true"
        android:elevation="2dp"

        android:indeterminate="true"
        app:indicatorColor="@color/Flame"

        tools:visibility="visible" />

</RelativeLayout>