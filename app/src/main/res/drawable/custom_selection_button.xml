<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <shape android:shape="rectangle">
        <stroke android:width="3dp" android:color="@color/DarkBlueYonder" />
        <solid android:color="@color/backgroundColor"/>
        <padding android:left="0dp" android:top="8dp"
                android:right="0dp" android:bottom="8dp" />
        <corners android:radius="8dp" />
    </shape>
    </item>

    <item android:state_selected="false"> <shape android:shape="rectangle">
        <solid android:color="@color/backgroundColor"/>
        <padding android:left="0dp" android:top="8dp"
            android:right="0dp" android:bottom="8dp" />
        <corners android:radius="8dp" />
    </shape>
    </item>
</selector>