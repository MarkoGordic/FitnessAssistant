<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="400">
    <item android:state_pressed="true" android:drawable="@color/BlueYonder" />
    <item android:state_selected="true" android:drawable="@color/backgroundColor" />
    <item>
        <inset android:insetLeft="-1dp" android:insetRight="-1dp" android:insetTop="-1dp">
            <shape android:shape="rectangle">
                <stroke android:width="1dp" android:color="@color/LightGrayColor" />
                <solid android:color="@color/backgroundColor" />
            </shape>
        </inset>
    </item>
</selector>