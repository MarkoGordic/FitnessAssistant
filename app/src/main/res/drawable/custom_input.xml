<?xml version="1.0" encoding="utf-8"?>
<!-- Defining shapes for input in sign in screen -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Used as a border for textViews during authentication -->

    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/BackgroundColor" />
            <corners android:radius="10dp"/>
            <stroke android:color="@color/SpaceCadet" android:width="1.5dp"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/BackgroundColor" />
            <corners android:radius="10dp"/>
            <stroke android:color="@color/BlueYonder" android:width="1dp"/>
        </shape>
    </item>

</selector>